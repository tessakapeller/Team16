<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="500.0" prefWidth="700.0" spacing="20.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">

    <Label fx:id="welcomeText" />
    <ImageView fx:id="splash" fitHeight="500.0" fitWidth="700.0" pickOnBounds="true" preserveRatio="true">
        <image>
            <Image url="@logo.jpg" />
        </image>
        <cursor>
            <Cursor fx:constant="DEFAULT" />
        </cursor>
    </ImageView>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
